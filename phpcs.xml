<?xml version="1.0"?>
<ruleset name="My-Logos PHP_CodeSniffer">
    <description>PHP_CodeSniffer configuration for My-Logos project with PHPDoc standards</description>
    
    <!-- Include PSR-12 standard -->
    <rule ref="PSR12"/>
    
    <!-- PHPDoc specific rules -->
    <rule ref="Squiz.Commenting.FunctionComment"/>
    <rule ref="Squiz.Commenting.VariableComment"/>
    <rule ref="Squiz.Commenting.ClassComment"/>
    
    <!-- Custom spacing rules for PHPDoc -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>
    
    <!-- Remove extra blank lines -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace"/>
    
    <!-- PHPDoc spacing rules -->
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamName"/>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterReturn"/>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingBeforeParamType"/>
    
    <!-- Exclude vendor and cache directories -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>storage/</exclude-pattern>
    <exclude-pattern>bootstrap/cache/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>
    <exclude-pattern>public/</exclude-pattern>
    
    <!-- Files to check -->
    <file>app/</file>
    <file>config/</file>
    <file>database/</file>
    <file>routes/</file>
    <file>resources/</file>
</ruleset>
