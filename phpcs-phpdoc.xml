<?xml version="1.0"?>
<ruleset name="PHPDoc Standards">
    <description>PHP_CodeSniffer configuration specifically for PHPDoc standards</description>
    
    <!-- PHPDoc specific rules -->
    <rule ref="Squiz.Commenting.FunctionComment">
        <properties>
            <property name="requiredTags" value="param,return"/>
        </properties>
    </rule>
    
    <rule ref="Squiz.Commenting.ClassComment">
        <properties>
            <property name="requiredTags" value="author,version"/>
        </properties>
    </rule>
    
    <rule ref="Squiz.Commenting.VariableComment"/>
    
    <!-- Spacing rules for PHPDoc -->
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamName"/>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterReturn"/>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingBeforeParamType"/>
    
    <!-- Remove extra blank lines in PHPDoc -->
    <rule ref="PSR2.WhiteSpace.SuperfluousWhitespace"/>
    
    <!-- Custom rules for Arabic documentation -->
    <rule ref="Generic.Commenting.DocComment">
        <properties>
            <property name="spacing" value="1"/>
        </properties>
    </rule>
    
    <!-- Exclude vendor directories -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>storage/</exclude-pattern>
    <exclude-pattern>bootstrap/cache/</exclude-pattern>
    
    <!-- Files to check -->
    <file>app/</file>
    <file>config/</file>
    <file>database/</file>
    <file>routes/</file>
</ruleset>
